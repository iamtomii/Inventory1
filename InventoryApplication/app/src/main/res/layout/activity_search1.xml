<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawer_layout"
    tools:ignore="SpeakableTextPresentCheck">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="top"
            android:orientation="horizontal"
            app:layout_constraintBottom_toTopOf="@+id/guideline7"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TableLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@color/BlueGray">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="@dimen/size5dp">

                    <TextView
                        android:id="@+id/condition_name1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/size5dp"
                        android:text="@string/barcode_product"
                        android:textColor="@color/BlueGrayLight" />

                    <EditText
                        android:id="@+id/search_cd1"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/size50dp"
                        android:background="@drawable/edittext_shape"
                        android:ems="8"
                        android:inputType="number"
                        android:maxLength="13"
                        android:paddingStart="@dimen/size5dp"
                        android:paddingEnd="@dimen/size5dp"
                        android:textColor="@color/BlueGray"
                        tools:ignore="SpeakableTextPresentCheck" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/BlueGray"
                    android:padding="@dimen/size5dp">

                    <TextView
                        android:id="@+id/condition_name2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/size5dp"
                        android:text="@string/name_product"
                        android:textColor="@color/BlueGrayLight" />

                    <EditText
                        android:id="@+id/search_name"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/size50dp"
                        android:background="@drawable/edittext_shape"
                        android:ems="8"
                        android:inputType="text"
                        android:paddingStart="@dimen/size5dp"
                        android:paddingEnd="@dimen/size5dp"
                        android:textColor="@color/BlueGray"
                        tools:ignore="SpeakableTextPresentCheck" />

                </TableRow>

            </TableLayout>

            <LinearLayout
                android:id="@+id/btn_search"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_column="1"
                android:background="@color/BlueGray"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingTop="@dimen/padding_btn_register_data"
                android:paddingBottom="@dimen/padding_btn_register_data">

                <ImageView
                    android:layout_width="@dimen/width_img_btn_register_data"
                    android:layout_height="@dimen/height_img_btn_register_data"
                    app:srcCompat="@drawable/search" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/btn_search"
                    android:textColor="@color/BlueGrayLight"
                    android:textSize="@dimen/size_btn_register_data" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout8"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/guideline7">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@drawable/cell_shape_title_3"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView13"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="@drawable/cell_shape_title_3"
                    android:gravity="center"
                    android:text="Num" />

                <TextView
                    android:id="@+id/textView14"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="2"
                    android:background="@drawable/cell_shape_title_3"
                    android:gravity="center"
                    android:text="Name" />

                <TextView
                    android:id="@+id/textView15"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="2"
                    android:background="@drawable/cell_shape_title_3"
                    android:gravity="center"
                    android:text="Barcode" />

                <TextView
                    android:id="@+id/textView16"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="@drawable/cell_shape_title_3"
                    android:gravity="center"
                    android:text="Quantity" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="17"
                android:orientation="horizontal">

                <ListView
                    android:id="@+id/list_result_search"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.5"
                android:background="@drawable/linearlayout_scan_custom"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/total_quantity"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/linearlayout_scan_custom"
                    android:text="Quantity:"
                    android:textColor="@color/BlueGrayLight"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/total_money"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="2"
                    android:background="@drawable/linearlayout_scan_custom"
                    android:text="amount:"
                    android:textColor="@color/BlueGrayLight"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/total_error"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="2"
                    android:background="@drawable/linearlayout_scan_custom"
                    android:text="Error:"
                    android:textColor="@color/BlueGrayLight"
                    android:visibility="gone" />
            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginEnd="-200dp"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/guideline8"
            app:srcCompat="@drawable/reply" />


        <LinearLayout
            android:id="@+id/linear_fragment"
            android:layout_width="350dp"
            android:layout_height="300dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" >

        </LinearLayout>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.18" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_end="144dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_views"
        android:layout_width="320dp"
        android:layout_height="match_parent"
        android:background="@color/BlueGray"
        app:headerLayout="@layout/header_nav"
        app:itemBackground="@drawable/item_nav_shape"
        app:itemIconTint="@color/BlueGrayLight"
        app:itemTextColor="@color/BlueGrayLight"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:menu="@menu/nav"
        app:itemIconSize="32dp"
        android:layout_gravity="start"
        app:itemTextAppearance="@style/NavDrawerTextStyle"/>

</androidx.drawerlayout.widget.DrawerLayout>