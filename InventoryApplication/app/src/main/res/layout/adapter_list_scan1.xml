<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/lv_row"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_weight="0"
        android:background="@drawable/cell_shape_title_4"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/list_column1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:textColor="@color/BlueGray"
            android:background="@drawable/cell_shape_title_4"
            android:gravity="center"
            android:text="Num" />

        <TextView
            android:id="@+id/list_column2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="2"
            android:background="@drawable/cell_shape_title_4"
            android:gravity="center"
            android:text="Name" />

        <TextView
            android:id="@+id/list_column3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="2"
            android:background="@drawable/cell_shape_title_4"
            android:gravity="center"
            android:text="Barcode" />

        <TextView
            android:id="@+id/list_column4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@drawable/cell_shape_title_4"
            android:gravity="center"
            android:text="Quantity" />
    </LinearLayout>
</LinearLayout>
